package foo.bar;

import "other.aur"

// Some comment

bus C1: biz.R;
bus C2: int;
bus Out: int;

intf Clock {
   tick(): int;
}

comp Adder implements Clock {
    in {
       a: int;
       b: int;
    }

    out {
       c: int;
    }

    func {
      void m1 [from {a,b}, to {c}]
      void tick [every 20ms, to {c}]
    }

    data {
       factor: int;
    }

    // Should connect block have different syntax than the rest?
    connect {
       C1 -> in.a;
       C2 -> in.b;
       out.c -> Out
    }
}
